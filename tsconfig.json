{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "outDir": "dist",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "jsx": "react-jsx",
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "~/*": ["./app/*"]
    },
    "lib": [
      "DOM", "DOM.Iterable", "ES2019",
      "ES5", "ES6", "ES7"
    ]
  },
  "exclude": ["node_modules", "dist", "build", "tmp",],
  "include": ["**/*.ts", "**/*.tsx", "**/*.d.ts", "**/*.js"],
}

