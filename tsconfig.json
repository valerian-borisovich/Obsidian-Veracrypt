{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "dist",
    "target": "ES2018",
    "lib": ["ES6"],
    "module": "esnext",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "removeComments": true,
    "esModuleInterop": true,
    "strict": true
  },
  "exclude": ["node_modules", "dist", "build", "tmp",],
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/*.js"],
  "lib": [ "ESNEXT" ],
  "ts-node": { "esm": true }
}
