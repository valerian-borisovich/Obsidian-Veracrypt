{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "ES2019",
    "allowJs": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "jsx": "react-jsx",
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "~/*": ["./app/*"]
    },
    "lib": [
      "DOM", "DOM.Iterable", "ES2019",
      "ES5",
      "ES6",
      "ES7"
    ]
  },
  "exclude": ["node_modules", "dist", "build", "tmp",],
  "include": ["**/*.ts", "**/*.tsx", "**/*.d.ts", "**/*.js"],
}
