{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "inlineSourceMap": true,
    "inlineSources": true
  },
  "exclude": ["node_modules", "dist", "build", "tmp",],
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/*.js"],
  "lib": ["esnext", "DOM",  "ES5", "ES6", "ES7", "ES2019" ],
  "ts-node": { "esm": true }
}
